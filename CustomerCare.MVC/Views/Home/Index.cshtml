@model CustomerCare.MVC.Models.Customer;

@{
    ViewData["Title"] = "Ticket de atención al cliente";
}

<div class="card">
    <div class="card-header">
        Ticket de atención al cliente
    </div>
    <div class="card-body">
        <form asp-action="SaveCustomer" asp-controller="Home" method="post">
            <div class="mb-3">
                <label class="form-label">Id</label>
                <input asp-for="Id" type="number" class="form-control" value="0">
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Nombre</label>
                <input asp-for="Name" type="text" class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Guardar</button>
        </form>
        <div>
            <span>Cola 1</span>
            <div id="queue1"></div>
        </div>
        <div>
            <span>Cola 2</span>
            <div id="queue2"></div>
        </div>
    </div>
</div>